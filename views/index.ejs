<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>Recipe App</title>
</head>
<body>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
      <div class="container-fluid">
        <a class="navbar-brand" href="/">Recipe App</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="collapsibleNavbar">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link" href="/recipe">Add new recipe</a>
            </li> 
          </ul>
        </div>
      </div>
    </nav>
  <div class="container">
    <br>
    <div class="text-center"><h2>Recipes from Recipe App Database</h2></div>
    <br>
  
    <table class="table table-hover small text-center">
      <thead>
          <tr>
            <th width="100">Title</th>
            <th width="100">Image</th>
            <th width="50">Description</th>
            <th width="50">Author</th>
            <th width="50">Edit</th>
            <th width="50">Delete</th>
          </tr>
      </thead>
      <tbody>
        <% for(let i=0; i < recipes.length; i++) { %>
          <tr>
            <td><a href = "/recipe/<%= recipes[i].recipe_id %>"><%= recipes[i].title %></a></td>
            <td><img src = "images/<%= recipes[i].image %>" width = 100%"></td>
            <td><textarea rows="10" cols="100" readonly><%= recipes[i].description %></textarea></td>
            <td><%= recipes[i].name %></td>
            <!--Edit Link-->
            <td><a href = "/editRecipe/<%= recipes[i].recipe_id %>">Edit</a></td>
            <!--Delete Link-->
            <td><a href="/deleteRecipe/<%= recipes[i].recipe_id %>" onclick = "return confirm(
            'Are you sure you want to delete this recipe?')">Delete</a></td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>
</body>
</html>
