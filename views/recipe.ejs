<!-- product.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <title>Recipe App</title>
</head>
<body>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
        <div class="container-fluid">
          <a class="navbar-brand" href="/">Recipe App</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="collapsibleNavbar">
            <ul class="navbar-nav">
              <li class="nav-item">
                <a class="nav-link" href="/recipe">Add new recipe</a>
              </li> 
            </ul>
          </div>
        </div>
    </nav>
    
    <div class="container">
        <br>
        <div class="text-center"><h2>Recipe Details</h2></div>
        <br>
        <% if (recipe) { %> <!-- Check if product data exists -->
            <div>
                <p><b>Title:</b><br> <%= recipe.title %></p>
                <p><b>Image:</b><br> <img src = "/images/<%= recipe.image %>" width="20%"></p>
                <p><b>Description:</b><br> <textarea rows="25" cols="100" rowsreadonly><%= recipe.description %></textarea></p>
                <p><b>Author:</b><br> <%= recipe.name %></p> 
            </div>
        <% } else { %>
            <p>No recipe found.</p>
        <% } %>
        <a href ="/">Back</a>
    </div>
    
</body>
</html>
